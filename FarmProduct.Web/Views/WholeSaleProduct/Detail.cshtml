@model FarmProduct.Web.Models.WholeSaleProductEditModel
@{
    ViewBag.Title = "批发产品信息";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3>
            产品信息</h3>
        <ul class="content-box-tabs">
            <li><a href="@Url.Action("Detail", "AgriculturalProduct", new { id = @Model.AgriculturalProductId })" target="_blank" class="default-tab">查看农产品原始信息</a></li>
        </ul>
        <div class="clear">
        </div>
    </div>
    <div class="content-box-content">
        <div style="color: Red">
            @Html.ValidationSummary(true, "")
        </div>
        <div class="tab-content default-tab" id="tab2">
            @using (Html.BeginForm("detail", "WholeSaleProduct", FormMethod.Post, new { @class = "form" }))
            {
                @Html.HiddenFor(model => model.AgriculturalProductId)
                <fieldset>
                    <!-- Set class to "column-left" or "column-right" on fieldsets to divide the form into columns -->
                    <p>
                        <label>
                            产品名字</label>
                        @Html.TextBoxFor(model => model.ProductName, new { @class = "text-input small-input datepicker" })
                    </p>
                    <p>
                        <label>
                            批次</label>
                        @Html.TextBoxFor(model => model.Batch, new { @class = "text-input tiny-input", @style = "width:100px" })
                    </p>
                    <p>
                        <label>
                            接收企业</label>
                        @Html.TextBoxFor(model => model.ToCompanyName, new { @class = "text-input tiny-input", @style = "width:100px" })
                    </p>
                    <p>
                        <label>
                            批发人</label>
                        @Html.TextBoxFor(model => model.InsertUserRealName, new { @class = "text-input tiny-input", @style = "width:100px" })
                    </p>
                    <p>
                        <label>
                            批发时间</label>
                        @Html.TextBox("InsertDate", Model.InsertDate.ToString("yyyy-MM-dd HH:mm:ss"), new { @class = "text-input tiny-input", @style = "width:100px" })
                    </p>
                </fieldset>
                <div class="clear">
                </div>
                <!-- End .clear -->
            }
        </div>
    </div>
</div>
