@using FarmProduct.Web.Models
@model FarmProduct.Web.Models.ListViewModel<SecurityProdutModel>
@{
    ViewBag.Title = "可预警产品列表";
    int j = 0;
    string strStyle = "";
}
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3>
            可预警产品列表</h3>
        <ul class="content-box-tabs">
            <li><a href="@Url.Action("Index", "SecurityCheck")" class="default-tab">已预警产品列表</a></li>
        </ul>
        <div class="clear">
        </div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
            <!-- This is the target div. id must match the href of this div's tab -->
            <table>
                <thead>
                    <tr>
                        <th>
                            农产品名称
                        </th>
                        <th>
                            所属企业
                        </th>
                        <th>
                            产品类型
                        </th>
                        <th>
                            产品上市时间
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <!-- End .pagination -->
                            <div class="clear">
                            </div>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        if (j % 2 == 0)
                        {
                            strStyle = "alt-row";
                        }
                        else
                        {
                            strStyle = "";
                        }
                        <tr class="@strStyle">
                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.CompanyName
                            </td>
                            <td>
                                @item.ProductTypeName
                            </td>
                            <td>
                                @item.ProductInsertDate
                            </td>
                            <td>
                                <!-- Icons -->
                                <a href="@Url.Action("Create", "SecurityCheck", new { id = @item.ProductId , productType = @item.ProductType})" title="预警" >
                                    预警</a>
                            </td>
                        </tr>
                        j++;
                    }
                </tbody>
            </table>
        </div>
        <!-- End #tab1 -->
        <!-- End #tab2 -->
    </div>
    <!-- End .content-box-content -->
</div>
