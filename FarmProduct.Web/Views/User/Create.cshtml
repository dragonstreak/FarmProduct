@using FarmProduct.Web.Common
@using FarmProduct.Model
@using FarmProduct.Web.Extensions
@model FarmProduct.Web.Models.UserEditModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3>
            添加用户</h3>
        <ul class="content-box-tabs">
            <li><a href="@Url.Action("Index")" class="default-tab">返回列表</a></li>
        </ul>
        <div class="clear">
        </div>
    </div>
    <div class="content-box-content">
        <div style="color: Red">
            @Html.ValidationSummary(true, "")
        </div>
        <div class="tab-content default-tab" id="tab2">
            @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form" }))
            {
                @Html.HiddenFor(model => model.Id)
                <fieldset>
                    <!-- Set class to "column-left" or "column-right" on fieldsets to divide the form into columns -->
                    <p>
                        <label>
                            登录名</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "text-input small-input", @style = "width:150px" })
                        <span class="input-notification success png_bg">必须输入</span>
                        @Html.ValidationMessageFor(m =>m.UserName)
                    </p>
                    <p>
                        <label>
                            真实姓名</label>
                        @Html.TextBoxFor(model => model.RealName, new { @class = "text-input small-input", @style = "width:150px" })
                        <span class="input-notification success png_bg">必须输入</span>
                        @Html.ValidationMessageFor(m=>m.RealName)
                    </p>
                    <p>
                        <label>
                            密码</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "text-input tiny-input", @style = "width:150px" })
                        <span class="input-notification success png_bg">必须输入</span>
                        @Html.ValidationMessageFor(m=>m.Password)
                    </p>
                    <p>
                        <label>
                            联系电话</label>
                        @Html.TextBoxFor(model => model.Telephone, new { @class = "text-input tiny-input", @style = "width:150px" })
                    </p>
                    <p>
                        <label>
                            电子邮件</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "text-input small-input", @style = "width:150px" })
                    </p>
                    <p>
                        <label>
                            公司</label>
                        @Html.DropDownList("CompanyId", new SelectList(Model.CompanyList, "Id", "CompanyName"), "请选择企业")
                        @Html.ValidationMessageFor(m => m.CompanyId, "请选择用户所在公司")
                    </p>

                    <p>
                        <input class="button" type="submit" value="Submit" />
                    </p>
                </fieldset>
                <div class="clear">
                </div>
                <!-- End .clear -->
            }
        </div>
    </div>
</div>
