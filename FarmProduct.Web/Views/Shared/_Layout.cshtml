<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/invalid.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/facebox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.wysiwyg.js")"></script>
</head>
<body>
    <div id="body-wrapper">
        <!-- Wrapper for the radial gradient background -->
        <div id="sidebar">
            <div id="sidebar-wrapper">
                <!-- Sidebar with logo and menu -->
                <h1 id="sidebar-title">
                    <a href="@Url.Action("index", "Home")">赣农畜产品监管系统</a></h1>
                <!-- Logo (221px wide) -->
                <a href="@Url.Action("index", "Home")">
                    <img id="logo" src="@Url.Content("~/Content/images/logo.jpg")" alt="Simpla Admin logo" /></a>
                <!-- Sidebar Profile links -->
                <div id="profile-links">
                    <a href="@Url.Action("index", "Home")" title="View the Site">回到首页</a> | <a href="@Url.Action("LogOff", "Account")" title="Sign Out">
                        注销</a>
                </div>
                <ul id="main-nav">
                    <!-- Accordion Menu -->
                    <li><a href="@Url.Action("index", "Home")" class="nav-top-item no-submenu">
                        <!-- Add the class "no-submenu" to menu items with no sub menu -->
                        首页 </a></li>
                    @if (FarmProduct.Web.Common.Utilts.IsAuthorized(FarmProduct.Model.Role.FarmProductUser))
                    {
                        <li><a href="#" class="nav-top-item ">
                            <!-- Add the class "current" to current menu item -->
                            农产品管理 </a>
                            <ul>
                                <li><a href="@Url.Action("Index", "AgriculturalProduct")">未批发农产品</a></li>
                                <li><a href="@Url.Action("WholeSold", "WholeSaleProduct")">已批发农产品</a></li>
                            </ul>
                        </li>
                    }
                    @if (FarmProduct.Web.Common.Utilts.IsAuthorized(FarmProduct.Model.Role.WholeSaleUser))
                    {
                        <li><a href="#" class="nav-top-item ">
                            <!-- Add the class "current" to current menu item -->
                            批发管理 </a>
                            <ul>
                                <li><a  href="@Url.Action("CanSaleProduct", "WholeSaleProduct")">可批发产品管理</a></li>
                                <li><a href="@Url.Action("MyWholeSaleProduct", "WholeSaleProduct")">可分割产品</a></li>
                                <li><a href="@Url.Action("CutWholeSaleProduct", "WholeSaleProduct")">已分割产品</a></li>
                                <li><a href="@Url.Action("WholeSold", "RetailProduct")">已批发产品</a></li>
                            </ul>
                        </li>
                    }
                    @if (FarmProduct.Web.Common.Utilts.IsAuthorized(FarmProduct.Model.Role.RetailUser))
                    {
                        <li><a href="#" class="nav-top-item ">
                            <!-- Add the class "current" to current menu item -->
                            零售管理 </a>
                            <ul>
                                <li><a href="@Url.Action("CanCutProduct", "RetailProduct")">可分割产品</a></li>
                                <li><a href="@Url.Action("CutProduct", "RetailProduct")">已分割产品</a></li>
                                <li><a href="@Url.Action("CanRetail", "RetailProduct")">可销售产品</a></li>
                                <li><a href="@Url.Action("RetailedProduct", "RetailProduct")">已销售产品</a></li>
                            </ul>
                        </li>
                    }
                    @if (FarmProduct.Web.Common.Utilts.IsAuthorized(FarmProduct.Model.Role.SecurityChecker))
                    {
                        <li><a href="#" class="nav-top-item">预警管理 </a>
                            <ul>
                                <li><a href="@Url.Action("Index", "SecurityCheck")">预警产品列表</a></li>
                            </ul>
                        </li>
                    }
                    @if (FarmProduct.Web.Common.Utilts.IsAuthorized(FarmProduct.Model.Role.Admin))
                    {
                        <li><a href="#" class="nav-top-item">商家管理 </a>
                            <ul>
                                <li><a href="@Url.Action("index", "Company")">商家管理</a></li>
                            </ul>
                        </li>
                        <li><a href="#" class="nav-top-item">用户管理 </a>
                            <ul>
                                <li><a href="@Url.Action("index", "User")">用户管理</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                <!-- End #main-nav -->
                <div id="messages" style="display: none">
                    <!-- Messages are shown when a link with these attributes are clicked: href="#messages" rel="modal"  -->
                    <h3>
                        3 Messages</h3>
                    <p>
                        <strong>17th May 2009</strong> by Admin<br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus magna. Cras in
                        mi at felis aliquet congue. <small><a href="#" class="remove-link" title="Remove message">
                            Remove</a></small>
                    </p>
                    <p>
                        <strong>2nd May 2009</strong> by Jane Doe<br />
                        Ut a est eget ligula molestie gravida. Curabitur massa. Donec eleifend, libero at
                        sagittis mollis, tellus est malesuada tellus, at luctus turpis elit sit amet quam.
                        Vivamus pretium ornare est. <small><a href="#" class="remove-link" title="Remove message">
                            Remove</a></small>
                    </p>
                    <p>
                        <strong>25th April 2009</strong> by Admin<br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus magna. Cras in
                        mi at felis aliquet congue. <small><a href="#" class="remove-link" title="Remove message">
                            Remove</a></small>
                    </p>
                    <form action="#" method="post">
                    <h4>
                        New Message</h4>
                    <fieldset>
                        <textarea class="textarea" name="textfield" cols="79" rows="5"></textarea>
                    </fieldset>
                    <fieldset>
                        <select name="dropdown" class="small-input">
                            <option value="option1">Send to...</option>
                            <option value="option2">Everyone</option>
                            <option value="option3">Admin</option>
                            <option value="option4">Jane Doe</option>
                        </select>
                        <input class="button" type="submit" value="Send" />
                    </fieldset>
                    </form>
                </div>
                <!-- End #messages -->
            </div>
        </div>
        <!-- End #sidebar -->
        <div id="main-content">
            <!-- Main Content Section with everything -->
            <noscript>
                <!-- Show a notification if the user has disabled javascript -->
                <div class="notification error png_bg">
                    <div>
                        Javascript is disabled or is not supported by your browser. Please <a href="http://browsehappy.com/"
                            title="Upgrade to a better browser">upgrade</a> your browser or <a href="http://www.google.com/support/bin/answer.py?answer=23852"
                                title="Enable Javascript in your browser">enable</a> Javascript to navigate
                        the interface properly.
                    </div>
                </div>
            </noscript>
            <!-- Page Head -->
            @RenderBody()
            <div id="footer">
                <small>
                    <!-- Remove this notice or replace it with whatever you want -->
                    &#169; Copyright 2009 极品拖拉机 | Powered by <a href="#">极品拖拉机</a> | <a href="#">Top</a>
                </small>
            </div>
            <!-- End #footer -->
        </div>
        <!-- End #main-content -->
    </div>
</body>
</html>
